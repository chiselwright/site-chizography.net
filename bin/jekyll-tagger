#!/usr/bin/env python3

'''
tag_generator.py

Copyright 2017 Long Qian
Contact: lqian8@jhu.edu

This script creates tags for your Jekyll blog hosted by Github page.
No plugins required.
'''

import glob
import os

post_dir = os.getcwd() + '/_posts/'
tag_dir =  os.getcwd() + '/tag/'

filenames = glob.glob(post_dir + '*md')

total_tags = []
for filename in filenames:
    f = open(filename, 'r', encoding='utf8')
    print('scanning: ', filename)
    crawl = False
    for line in f:
        if crawl:
            current_tags = line.strip().split()
            if current_tags[0] == 'tags:':
                total_tags.extend(current_tags[1:])
                crawl = False
                break
        if line.strip() == '---':
            if not crawl:
                crawl = True
            else:
                crawl = False
                break
    f.close()
total_tags = set(total_tags)

old_tags = glob.glob(tag_dir + '*.md')
for tag in old_tags:
    print('removing old tag: ', tag)
    os.remove(tag)

if not os.path.exists(tag_dir):
    print('making directory: ', tag_dir)
    os.makedirs(tag_dir)

for tag in total_tags:
    tag_filename = tag_dir + tag + '.md'
    #print("writing to: ", tag_filename)
    f = open(tag_filename, 'w')
    write_str = '---\nlayout: tagpage\ntitle: \"Tag: ' + tag + '\"\ntag: ' + tag + '\nrobots: noindex\npermalink: /tag/' + tag + '/\nexclude: true\n---\n'
    f.write(write_str)
    f.close()
print("Tags generated, count", total_tags.__len__())
for tag in total_tags:
    tag_filename = tag_dir + tag + '.md'
    if(os.path.exists(tag_filename)):
        print('file exists: ', tag_filename)
    else:
        print('file missing: ', tag_filename)
